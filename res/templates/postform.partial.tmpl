{{define "replytable"}}
    <table>
        <tbody>
            <tr>
                <input type="hidden" name="_csrf" value="{{.XCSRF_TOKEN}}">
                <td class="postblock">
                    Comment
                </td>
                <td>
                    <textarea 
                        name="text" 
                        placeholder="Comment" 
                        rows="4" cols="48" 
                        minlength="3" 
                        maxlength="1500" 
                        required=""></textarea>
                </td>
            </tr>
            {{if .captcha.enabled}}
            <tr>
                <td class="postblock">Captcha</td>
                <td>
                    <img id="captcha_image" src="/captcha/{{.captcha.ID}}.png">
                    <br>
                    <input id="captcha_input" type="text" name="captchaSolution" size="48">
                    <input type="hidden" name="captchaId" value="{{.captcha.ID}}">
                </td>
            </tr>
            {{end}}
            <tr>
                <td></td>
                <td> <input type="submit" value="Post"></td>
            </tr>
        </tbody>
    </table>
{{end}}

{{/* Use top-level */}}
{{define "threadform"}}
<form id="threadform" action="/{{.Board.Slug}}/newthread" method="POST" enctype="multipart/form-data">
    {{template "replytable" .}}
</form>
{{end}}

{{/* Use top-level */}}
{{define "replyform"}}
<form id="postform" action="/{{.OP.Board}}/thread/{{.OP.No}}/reply" method="POST" enctype="multipart/form-data">
    {{template "replytable" .}}
</form>
{{end}}
